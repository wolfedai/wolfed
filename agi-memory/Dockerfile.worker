FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

COPY pyproject.toml README.md /app/
COPY agi_cli.py agi_init.py agi_mcp_server.py conversation.py ingest.py memory_tools.py worker.py cognitive_memory_api.py /app/

RUN pip install --no-cache-dir .

CMD ["agi-worker"]
